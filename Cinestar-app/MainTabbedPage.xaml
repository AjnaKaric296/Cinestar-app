<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Cinestar_app"
    x:Class="Cinestar_app.MainTabbedPage"
    BarBackgroundColor="#051851"
    BarTextColor="White">

    <TabbedPage.Children>
        <NavigationPage Title="Pocetna" IconImageSource="home.png">
            <x:Arguments>
                <pages:HomePage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Filmovi" IconImageSource="film.png">
            <x:Arguments>
                <pages:Filmovi />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Bodovi" IconImageSource="bodovi.png">
            <x:Arguments>
                <pages:LoyaltyBodovi />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Profil" IconImageSource="profil.png">
            <x:Arguments>
                <pages:Profil />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
