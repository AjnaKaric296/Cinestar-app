<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.UserProfilPage"
             BackgroundColor="#051851"
             Title="Moj profil">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="MOJ PROFIL"
               FontSize="24"
               TextColor="#FFD700"
               HorizontalOptions="Center"/>
        <Frame WidthRequest="120"
               HeightRequest="120"
               CornerRadius="60"
               HasShadow="True"
               BackgroundColor="White"
               HorizontalOptions="Center">
            <Image Source="icon.png"  
                Aspect="AspectFill"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>


        <Label x:Name="ImeLabel" TextColor="White"/>
        <Label x:Name="PrezimeLabel" TextColor="White"/>
        <Label x:Name="EmailLabel" TextColor="White"/>

        <Button Text="Odjavi se"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="Logout_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
