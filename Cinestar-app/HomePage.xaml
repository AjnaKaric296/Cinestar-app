<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.HomePage"
             BackgroundColor="#051851"
             Title="Home">

    <Grid>

        <!-- Glavni sadržaj -->
        <ScrollView>
            <StackLayout Spacing="20" Padding="10">

                <!-- Header: logo + city label + strelica -->
                <Grid HeightRequest="60" Padding="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="logo.png" HeightRequest="50" WidthRequest="50" Grid.Column="0" VerticalOptions="Center"/>

                    <Label x:Name="CityLabel"
                           Text="{Binding SelectedCity}"
                           TextColor="#FFD200"
                           FontAttributes="Bold"
                           FontSize="20"
                           VerticalOptions="Center"
                           Grid.Column="1">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCityTapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Image Source="strelica.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           VerticalOptions="Center"
                           Grid.Column="2"/>
                </Grid>

                <!-- Carousel -->
                <CarouselView x:Name="HeroCarousel"
                              HeightRequest="250"
                              ItemsLayout="HorizontalList"
                              IsSwipeEnabled="True"
                              Margin="0">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                <StackLayout BackgroundColor="#66000000"
                                             Padding="10"
                                             WidthRequest="250"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                                    <Label Text="{Binding Year}" FontSize="14" TextColor="White"/>
                                    <Label Text="{Binding Description}" FontSize="12" TextColor="White" LineBreakMode="WordWrap"/>
                                </StackLayout>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCarouselTapped"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <!-- Comedy Section -->
                <StackLayout>
                    <Label Text="Najgledanije komedije" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <CollectionView x:Name="ComedyCollection" HeightRequest="180" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="5" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12">
                                    <Image Source="{Binding Poster}" WidthRequest="130" HeightRequest="180" Aspect="AspectFill"/>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnFilmTapped"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Adventure Section -->
                <StackLayout>
                    <Label Text="Pustolovine za cijelu porodicu" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <CollectionView x:Name="AdventureCollection" HeightRequest="180" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="5" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12">
                                    <Image Source="{Binding Poster}" WidthRequest="130" HeightRequest="180" Aspect="AspectFill"/>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnFilmTapped"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Action Section -->
                <StackLayout>
                    <Label Text="Najuzbudljiviji akcioni hitovi" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <CollectionView x:Name="ActionCollection" HeightRequest="180" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="5" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12">
                                    <Image Source="{Binding Poster}" WidthRequest="130" HeightRequest="180" Aspect="AspectFill"/>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnFilmTapped"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Call to action -->
                <Button Text="Vidi sve filmove"
                        BackgroundColor="#FFD200"
                        TextColor="#051851"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnSeeAllClicked"/>

                <!-- Footer -->
                <Label Text="© 2026 Cinestar. All rights reserved."
                       TextColor="#AAAAAA"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,20,0,20"/>
            </StackLayout>
        </ScrollView>

        <!-- Fullscreen Overlay -->
        <Grid x:Name="OverlayGrid"
              BackgroundColor="#80000000"
              IsVisible="False"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                <ActivityIndicator IsRunning="True" Color="#FFD200" WidthRequest="60" HeightRequest="60"/>
                <Label Text="Učitavanje..."
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
