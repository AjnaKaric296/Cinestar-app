<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.HomePage"
             BackgroundColor="#051851"
             Title="Home">

    <Grid>

        <ScrollView>
            <StackLayout Spacing="20" Padding="10">

                <Grid HeightRequest="60" Padding="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="logo.png" HeightRequest="100" WidthRequest="100" Grid.Column="0" VerticalOptions="Center"/>
                    <BoxView Grid.Column="1" WidthRequest="10"/>
                    <StackLayout Orientation="Horizontal" Grid.Column="2" VerticalOptions="Center" Spacing="5">
                        <Label x:Name="CityLabel"
                               Text="{Binding SelectedCity}"
                               TextColor="#FFD200"
                               FontAttributes="Bold"
                               FontSize="15"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCityTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <Image Source="strelica.png"
                               HeightRequest="10"
                               WidthRequest="10"
                               VerticalOptions="Center"
                               Margin="8"/>
                    </StackLayout>
                </Grid>

                <StackLayout>
                    <CarouselView x:Name="HeroCarousel"
                                  HeightRequest="240"
                                  ItemsLayout="HorizontalList"
                                  IsSwipeEnabled="True"
                                  IndicatorView="carouselIndicators"
                                  Margin="0">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                    <StackLayout Padding="10"
                                             WidthRequest="250"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Center">
                                        <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" TextColor="White"/>
                                        <Label Text="{Binding Year}" FontSize="10" TextColor="#FFD200"/>
                                        <Label Text="{Binding Description}" FontSize="10" TextColor="White" LineBreakMode="WordWrap"/>
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <IndicatorView x:Name="carouselIndicators"
                                   IndicatorColor="White"
                                    SelectedIndicatorColor="#FFD200" 
                                   HorizontalOptions="Center"
                                    Margin="0,10,0,15" />
                </StackLayout>

               
                <StackLayout>
                    <Label Text="Najgledanije" TextColor="White" Margin="10" FontSize="14"  TextTransform="Uppercase"/>
                    <CollectionView x:Name="ComedyCollection" HeightRequest="250" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="0,5,15,0" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12" HeightRequest="240" WidthRequest="185">
                                    <Image Source="{Binding Poster}" WidthRequest="200" HeightRequest="240" Aspect="AspectFill"/>
                                
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

              
                <StackLayout>
                    <Label Text="U bioskopima uskoro" TextColor="White" Margin="10" FontSize="14"  TextTransform="Uppercase"/>
                    <CollectionView x:Name="AdventureCollection" HeightRequest="250" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="0,5,15,0" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12" HeightRequest="240" WidthRequest="185"> 
                                    <Image Source="{Binding Poster}" WidthRequest="200" HeightRequest="240" Aspect="AspectFill"/>
                             
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

              
                <StackLayout>
                    <Label Text="Pravi hitovi" TextColor="White" Margin="10" FontSize="14"  TextTransform="Uppercase"/>
                    <CollectionView x:Name="ActionCollection" HeightRequest="250" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="0" Margin="0,5,15,0" BackgroundColor="Transparent" HasShadow="False" CornerRadius="12" HeightRequest="240" WidthRequest="185">
                                    <Image Source="{Binding Poster}" WidthRequest="200" HeightRequest="240" Aspect="AspectFill"/>
                                 
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

               
                <Button Text="Vidi sve filmove"
                        BackgroundColor="#FFD200"
                        TextColor="#051851"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnSeeAllClicked"/>

                
                <Label Text="© 2026 Cinestar. All rights reserved."
                       TextColor="#AAAAAA"
                       FontSize="10"
                       HorizontalOptions="Center"
                       Margin="0,20,0,5"/>
            </StackLayout>
        </ScrollView>

       
        <Grid x:Name="OverlayGrid"
              BackgroundColor="#80000000"
              IsVisible="False"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                <ActivityIndicator IsRunning="True" Color="#FFD200" WidthRequest="60" HeightRequest="60"/>
                <Label Text="Učitavanje..."
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
