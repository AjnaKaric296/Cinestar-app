<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.HomePage"
             BackgroundColor="#051851">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="logo.png" HeightRequest="40" Grid.Column="0"/>
                <Button x:Name="CityPickerButton" Text="Sarajevo"
                        BackgroundColor="Transparent" TextColor="White"
                        FontSize="16" FontAttributes="Bold" 
                        Clicked="OnCitySelected"
                        Grid.Column="1"/>
            </Grid>

            <!-- CAROUSEL - prvih 3 filma -->
            <CarouselView ItemsSource="{Binding Movies}" 
                          HeightRequest="200"
                          IndicatorView="IndicatorCarousel">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Poster}" Aspect="AspectFill"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <IndicatorView x:Name="IndicatorCarousel"
                           IndicatorColor="Gray"
                           SelectedIndicatorColor="White"
                           HorizontalOptions="Center"/>

            <Label Text="NA PROGRAMU" FontSize="20" FontAttributes="Bold" 
                   TextColor="White" HorizontalOptions="Center" Margin="0,20,0,10"/>

            <!-- 2x2 GRID -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Frame x:Name="FeaturedMovie1" Grid.Row="0" Grid.Column="0" 
                       CornerRadius="15" Padding="10" BackgroundColor="#1A2A4A">
                    <VerticalStackLayout>
                        <Image x:Name="Movie1Image" Aspect="AspectFill" HeightRequest="120"/>
                        <Label x:Name="Movie1Title" TextColor="White" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame x:Name="FeaturedMovie2" Grid.Row="0" Grid.Column="1" 
                       CornerRadius="15" Padding="10" BackgroundColor="#1A2A4A">
                    <VerticalStackLayout>
                        <Image x:Name="Movie2Image" Aspect="AspectFill" HeightRequest="120"/>
                        <Label x:Name="Movie2Title" TextColor="White" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame x:Name="FeaturedMovie3" Grid.Row="1" Grid.Column="0" 
                       CornerRadius="15" Padding="10" BackgroundColor="#1A2A4A">
                    <VerticalStackLayout>
                        <Image x:Name="Movie3Image" Aspect="AspectFill" HeightRequest="120"/>
                        <Label x:Name="Movie3Title" TextColor="White" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame x:Name="FeaturedMovie4" Grid.Row="1" Grid.Column="1" 
                       CornerRadius="15" Padding="10" BackgroundColor="#1A2A4A">
                    <VerticalStackLayout>
                        <Image x:Name="Movie4Image" Aspect="AspectFill" HeightRequest="120"/>
                        <Label x:Name="Movie4Title" TextColor="White" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
