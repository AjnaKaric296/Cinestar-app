<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Cinestar_app.Pages"
             x:Class="Cinestar_app.HomePage"
             Title="">

    <ScrollView>
        <StackLayout BackgroundColor="#051851">
            <StackLayout Orientation="Horizontal">
                <Image Source="logo.png"
                       HeightRequest="30"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />

                <Button x:Name="CityPickerButton"
                        BackgroundColor="#051851"
                        Clicked="OnCittySelected"
                        TextColor="White"
                        HeightRequest="1"
                        Padding="5"
                        HorizontalOptions="EndAndExpand"/>

                <Image Source="strelica.png" HeightRequest="10"/>
            </StackLayout>

            <StackLayout>
                <CarouselView
                    ItemsSource="{Binding Images}"
                    IndicatorView="indicator"
                    HeightRequest="220"
                    IsSwipeEnabled="True">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image
                                Source="{Binding}"
                                Aspect="AspectFill" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <IndicatorView
                    x:Name="indicator"
                    HorizontalOptions="Center"
                    Margin="0,5"
                    IndicatorColor="LightGray"
                    SelectedIndicatorColor="White"/>
            </StackLayout>

            <Label Text="Na programu" TextTransform="Uppercase" TextColor="White" Margin="10" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Featured Movies - DYNAMIC! -->
                <Frame Grid.Row="0" Grid.Column="0" x:Name="FeaturedMovie1" Margin="10" Padding="0" HeightRequest="100" BackgroundColor="LightGray">
                    <StackLayout>
                        <Image x:Name="Movie1Image" Aspect="AspectFit" HeightRequest="100"/>
                        <Label x:Name="Movie1Title" Text="Film 1" FontSize="10" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="0" Grid.Column="1" x:Name="FeaturedMovie2" Margin="10" Padding="0" HeightRequest="100" BackgroundColor="LightGray">
                    <StackLayout>
                        <Image x:Name="Movie2Image" Aspect="AspectFit" HeightRequest="100"/>
                        <Label x:Name="Movie2Title" Text="Film 2" FontSize="10" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" x:Name="FeaturedMovie3" Margin="10" Padding="0" HeightRequest="100" BackgroundColor="LightGray">
                    <StackLayout>
                        <Image x:Name="Movie3Image" Aspect="AspectFit" HeightRequest="100"/>
                        <Label x:Name="Movie3Title" Text="Film 3" FontSize="10" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="1" x:Name="FeaturedMovie4" Margin="10" Padding="0" HeightRequest="100" BackgroundColor="LightGray">
                    <StackLayout>
                        <Image x:Name="Movie4Image" Aspect="AspectFit" HeightRequest="100"/>
                        <Label x:Name="Movie4Title" Text="Film 4" FontSize="10" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
