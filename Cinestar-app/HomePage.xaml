<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.HomePage"
             BackgroundColor="#051851"
             Title="Home">

    <StackLayout Padding="10" Spacing="20">

        <Label Text="{Binding SelectedCity}"
               TextColor="#FFD200"
               FontAttributes="Bold"
               FontSize="18">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCityTapped"/>
            </Label.GestureRecognizers>
        </Label>

        <CarouselView x:Name="HeroCarousel"
                      HeightRequest="220"/>

        <CollectionView x:Name="FeaturedFilmsCollection"
                        SelectionChanged="OnFilmSelected"/>

        <Button Text="Pogledaj sve filmove"
                Clicked="OnGoToFilmovi"
                Margin="10"/>

    </StackLayout>
</ContentPage>
