<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Cinestar_app.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Cinestar_app"
             x:DataType="local:HomePage"
             Title="Cinestar Home">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- City Picker Button -->
            <Button x:Name="CityPickerButton"
                    Text="Izaberi grad"
                    BackgroundColor="#051851"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnCittySelected"/>

            <!-- Featured Movies -->
            <Label Text="Featured Filmovi" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Carousel + Indicators -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <CarouselView x:Name="FeaturedCarousel"
                              Grid.Row="0"
                              ItemsSource="{Binding FeaturedMovies}"
                              Loop="True"
                              IndicatorView="FeaturedIndicator">
                    <CarouselView.ItemTemplate>
                        <DataTemplate x:DataType="local:Movie">
                            <Border Stroke="#051851" StrokeThickness="2" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Image Grid.Row="0" 
                                           Source="{Binding Poster}"
                                           Aspect="AspectFill"
                                           HeightRequest="250"/>

                                    <VerticalStackLayout Grid.Row="1" Margin="5">
                                        <Label Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Year}" 
                                               FontSize="14" 
                                               TextColor="Gray"/>
                                        <Label Text="{Binding ImdbRating}" 
                                               FontSize="14" 
                                               TextColor="Gold"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <IndicatorView x:Name="FeaturedIndicator"
                               Grid.Row="1"
                               IndicatorColor="LightGray"
                               SelectedIndicatorColor="#051851"
                               HorizontalOptions="Center"
                               Margin="0,10"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
