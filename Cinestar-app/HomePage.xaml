<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Cinestar_app.Pages"
             x:Class="Cinestar_app.Pages.HomePage"
             Title="">

    <ScrollView>
        <StackLayout BackgroundColor="#051851">
            <StackLayout Orientation="Horizontal">
                <Image Source="logo.png"
                       HeightRequest="40"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />

                <Button x:Name="CityPickerButton"
        HorizontalOptions="End"
        BackgroundColor="#051851"
         Clicked="OnCittySelected"
                     
        TextColor="White"/>
            </StackLayout>


            <StackLayout>

                <CarouselView
        ItemsSource="{Binding Images}"
        IndicatorView="indicator"
        HeightRequest="220"
                    IsSwipeEnabled="True"
                    >

                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Image
                    Source="{Binding}"
                    Aspect="AspectFill" />
                        </DataTemplate>
                    </CarouselView.ItemTemplate>

                </CarouselView>

                <IndicatorView
        x:Name="indicator"
        HorizontalOptions="Center"
        Margin="0,5"
        IndicatorColor="LightGray"
        SelectedIndicatorColor="White"/>

            </StackLayout>




            <Label Text="Na programu" TextTransform="Uppercase"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Frame 1 -->
                <Frame Grid.Row="0" Grid.Column="0" Margin="10" Padding="10" BackgroundColor="LightGray">
                    <StackLayout>
                        <Label Text="Label 1" HorizontalOptions="Center"/>
                        <Image Source="slika1.png" Aspect="AspectFit" HeightRequest="100"/>
                    </StackLayout>
                </Frame>

                <!-- Frame 2 -->
                <Frame Grid.Row="0" Grid.Column="1" Margin="10" Padding="10" BackgroundColor="LightGray">
                    <StackLayout>
                        <Label Text="Label 2" HorizontalOptions="Center"/>
                        <Image Source="slika2.png" Aspect="AspectFit" HeightRequest="100"/>
                    </StackLayout>
                </Frame>

                <!-- Frame 3 -->
                <Frame Grid.Row="1" Grid.Column="0" Margin="10" Padding="10" BackgroundColor="LightGray">
                    <StackLayout>
                        <Label Text="Label 3" HorizontalOptions="Center"/>
                        <Image Source="slika3.png" Aspect="AspectFit" HeightRequest="100"/>
                    </StackLayout>
                </Frame>

                <!-- Frame 4 -->
                <Frame Grid.Row="1" Grid.Column="1" Margin="10" Padding="10" BackgroundColor="LightGray">
                    <StackLayout>
                        <Label Text="Label 4" HorizontalOptions="Center"/>
                        <Image Source="slika4.png" Aspect="AspectFit" HeightRequest="100"/>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
