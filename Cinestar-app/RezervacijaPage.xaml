<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             x:Class="Cinestar_app.RezervacijaPage">

    <!-- ISTA GRADIENT POZADINA -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#051851" Offset="0"/>
            <GradientStop Color="#0B2A6F" Offset="1"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- POSTER FILMA -->
            <Image x:Name="PosterImage"
                   HeightRequest="260"
                   Aspect="AspectFill"/>

            <!-- NASLOV FILMA -->
            <Label x:Name="FilmTitleLabel"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <!-- ODABIR DATUMA -->
            <Label Text="Datum projekcije"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#FFD200"/>

            <DatePicker x:Name="DatePicker"
            TextColor="White"
            MinimumDate="{x:Static system:DateTime.Today}"
            Format="dd.MM.yyyy."/>


            <!-- ODABIR TERMINA -->
            <Label Text="Vrijeme projekcije"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#FFD200"/>

            <Picker x:Name="TimePicker"
                    Title="Odaberite termin"
                    TextColor="White"/>

            <!-- BROJ KARATA -->
            <Label Text="Broj karata"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#FFD200"/>

            <HorizontalStackLayout Spacing="15">
                <Stepper x:Name="TicketStepper"
                         Minimum="1"
                         Maximum="10"
                         Value="1"/>

                <Label x:Name="TicketCountLabel"
                       Text="1"
                       TextColor="White"
                       FontSize="16"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- GUMB ZA POTVRDU -->
            <Button Text="Potvrdi rezervaciju"
                    BackgroundColor="#FFD200"
                    TextColor="#051851"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    Clicked="ConfirmButton_Clicked"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
