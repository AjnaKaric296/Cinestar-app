<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.MojeRezervacije"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             Title="MojeRezervacije">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="VaÅ¡e rezervacije" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding Reservations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" Padding="10" CornerRadius="12">
                            <VerticalStackLayout Spacing="8">

                                <Label Text="{Binding FilmTitle}"
                           FontAttributes="Bold"
                           FontSize="18"/>

                                <Label Text="{Binding Date, StringFormat='Datum: {0:dd.MM.yyyy}'}"/>
                                <Label Text="{Binding Time, StringFormat='Vrijeme: {0}'}"/>
                                <Label Text="{Binding TicketCount, StringFormat='Karte: {0}'}"/>

                                <!-- QR KOD -->
                                <Image HeightRequest="150"
                                   WidthRequest="150"
                                   HorizontalOptions="Center"
                                   Source="{Binding ReservationUrl, Converter={StaticResource QrConverter}}"/>


                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>