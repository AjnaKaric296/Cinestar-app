<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.FilmDetalji"
             BackgroundColor="#0B0F1A"
             Title="Detalji filma">

    <ScrollView>
        <StackLayout Padding="15" Spacing="15">

            <!-- Poster -->
            <Frame Padding="0"
                   CornerRadius="12"
                   HasShadow="True"
                   BackgroundColor="#0B0F1A"
                   BorderColor="#051851">
                <Image x:Name="PosterImage"
                       HeightRequest="350"
                       Aspect="AspectFill"/>
            </Frame>

            <!-- Naslov -->
            <Label x:Name="TitleLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>

            <!-- Godina i zanr -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Spacing="15">
                <Label x:Name="YearLabel"
                       TextColor="#FFC107"
                       FontSize="14"/>
                <Label Text="|"
                       TextColor="White"/>
                <Label x:Name="GenreLabel"
                       TextColor="#FFC107"
                       FontSize="14"/>
            </StackLayout>

            <!-- Opis -->
            <Frame BackgroundColor="#12182B"
                   CornerRadius="10"
                   Padding="15">
                <Label x:Name="PlotLabel"
                       TextColor="White"
                       FontSize="14"
                       LineBreakMode="WordWrap"/>
            </Frame>

            <!-- Showtimes -->
            <Label Text="TERMINI PROJEKCIJA"
                   TextColor="#FFC107"
                   FontAttributes="Bold"
                   FontSize="16"/>

            <FlexLayout x:Name="ShowtimesLayout"
                        Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="Start"
                        AlignItems="Start"
                        Margin="0,10,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
