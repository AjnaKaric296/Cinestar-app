<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.FilmDetalji"
             BackgroundColor="#051851">

    <ScrollView>
        <StackLayout Padding="10">
            <Image x:Name="PosterImage" HeightRequest="300" Aspect="AspectFit"/>
            <Label x:Name="TitleLabel" TextColor="White" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="YearLabel" TextColor="LightGray"/>
            <Label x:Name="GenreLabel" TextColor="LightGray"/>
            <Label x:Name="CityLabel" TextColor="Orange"/>
            <Label x:Name="PlotLabel" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
