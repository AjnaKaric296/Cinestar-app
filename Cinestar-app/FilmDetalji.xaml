<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.FilmDetalji"
             Title="Detalji filma"
             BackgroundColor="#051851">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Image x:Name="PosterImage" HeightRequest="300"/>
            <Label x:Name="TitleLabel" FontSize="22" FontAttributes="Bold" TextColor="White"/>
            <Label x:Name="YearLabel" TextColor="LightGray"/>
            <Label x:Name="GenreLabel" TextColor="LightGray"/>
            <Label x:Name="CityLabel" TextColor="Orange"/>
            <Label x:Name="PlotLabel" TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
