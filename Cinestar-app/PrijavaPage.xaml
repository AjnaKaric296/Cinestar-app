<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.Pages.PrijavaPage"
             BackgroundColor="#051851"
             Title="Prijava">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="PRIJAVA"
                   FontSize="24"
                   TextColor="#FFD700"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Entry x:Name="EmailEntry" Placeholder="Email"
                   Keyboard="Email" TextColor="White"/>
            <Entry x:Name="LozinkaEntry" Placeholder="Lozinka"
                   IsPassword="True" TextColor="White"/>

            <Button Text="Prijavi se"
                    BackgroundColor="#FFD700"
                    TextColor="Black"
                    Clicked="PrijaviSe_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>