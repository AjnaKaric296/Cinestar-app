<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryBlue">#051851</Color>
            <Color x:Key="SecondaryWhite">#FFFFFF</Color>
            <Color x:Key="AccentYellow">#FFD700</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource AccentYellow}"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10,5"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SecondaryWhite}"/>
            </Style>

            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
