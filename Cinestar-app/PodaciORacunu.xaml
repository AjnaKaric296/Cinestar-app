<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.PodaciORacunu"
             BackgroundColor="#051851"
             Title="Podaci o računu">

    <!-- Custom Navigation Bar -->
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="50,*,50" VerticalOptions="Center">

            <!-- Back button -->
            <Button Text="⟵"
                    FontSize="24"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="BackButton_Clicked"
                    HorizontalOptions="Start" />

            <!-- Logo in the middle -->
            <Image Source="logo.png"
                   HeightRequest="40"
                   WidthRequest="40"
                   HorizontalOptions="Center"/>

            <!-- Profile image -->
            <Frame BackgroundColor="Transparent" Padding="0" CornerRadius="20" HorizontalOptions="End">
                <Image Source="profil.png"
                       HeightRequest="40"
                       WidthRequest="40"/>
            </Frame>

        </Grid>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Padding="15" Spacing="20">

            <!-- Header -->
            <Label Text="Podaci o računu"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- User Info Frame -->
            <Frame BackgroundColor="#0c205e" Padding="20" CornerRadius="15">
                <StackLayout Spacing="15">

                    <!-- Ime -->
                    <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center">
                        <Label Text="Ime:" TextColor="White" FontAttributes="Bold" WidthRequest="120"/>
                        <Label Text="{Binding Ime}" TextColor="White"/>
                    </StackLayout>

                    <!-- Prezime -->
                    <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center">
                        <Label Text="Prezime:" TextColor="White" FontAttributes="Bold" WidthRequest="120"/>
                        <Label Text="{Binding Prezime}" TextColor="White"/>
                    </StackLayout>

                    <!-- Email -->
                    <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center">
                        <Label Text="Email:" TextColor="White" FontAttributes="Bold" WidthRequest="120"/>
                        <Label Text="{Binding Email}" TextColor="White"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

            <!-- Promjena lozinke button -->
            <Button Text="Promijeni lozinku"
                    BackgroundColor="#0c205e"
                    TextColor="White"
                    CornerRadius="15"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Clicked="ChangePassword_Clicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
