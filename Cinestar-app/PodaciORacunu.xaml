<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.PodaciORacunu"
             BackgroundColor="#051851"
             Title="Podaci o raÄunu">

    <ScrollView>
        <StackLayout Padding="15" Spacing="10">

            <!-- Logo -->
            <Image Source="logo.png" HeightRequest="70" WidthRequest="70" HorizontalOptions="Start"/>

            <!-- Profilna slika -->
            <Frame Padding="0" BackgroundColor="Transparent" BorderColor="Gray" WidthRequest="100" Margin="0,10,0,10" HorizontalOptions="Center">
                <Image Source="profil.png" HeightRequest="100" />
            </Frame>

            <!-- Ime i Prezime -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                <Label Text="{Binding Ime}" TextColor="White" FontSize="30" FontAttributes="Bold" CharacterSpacing="1"/>
                <Label Text="{Binding Prezime}" TextColor="White" FontSize="30" FontAttributes="Bold" CharacterSpacing="1"/>
            </HorizontalStackLayout>

            <!-- Email -->
            <Label Text="{Binding Email}" Margin="0,0,0,10" TextColor="White" FontSize="16" HorizontalOptions="Center"/>

            <!-- Frame sa opcijama -->
            <Frame BackgroundColor="#0c205e" Margin="0,20,0,0" Padding="20" CornerRadius="20">
                <StackLayout Spacing="15">

                    <!-- Promijeni lozinku -->
                    <StackLayout Orientation="Horizontal" Spacing="15" Margin="5,0,5,0">
                        <Button Text="Promijeni lozinku"
                                BackgroundColor="#E50914"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="50"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Clicked="ChangePassword_Clicked"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" Color="#3e3e57" HorizontalOptions="FillAndExpand"/>

                    <!-- Povratak -->
                    <StackLayout Orientation="Horizontal" Spacing="15" Margin="5,0,5,0">
                        <Button Text="Nazad"
                                BackgroundColor="#0c205e"
                                TextColor="White"
                                CornerRadius="20"
                                HeightRequest="45"
                                FontAttributes="Bold"
                                HorizontalOptions="FillAndExpand"
                                Clicked="BackButton_Clicked"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>
