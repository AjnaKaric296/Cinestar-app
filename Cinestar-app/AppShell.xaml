<Shell
    x:Class="Cinestar_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Cinestar_app.Pages"
    Title="Cinestar_app">

    <TabBar>
        <ShellContent Title="Home" Icon="home.png" ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Movies" Icon="movies.png" ContentTemplate="{DataTemplate pages:Filmovi}" />
        <ShellContent Title="Loyalty" Icon="loyalty.png" ContentTemplate="{DataTemplate pages:LoyaltyBodovi}" />
        <ShellContent Title="Profile" Icon="profile.png" ContentTemplate="{DataTemplate pages:Profil}" />
    </TabBar>

</Shell>
