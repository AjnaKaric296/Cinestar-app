<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.Filmovi"
             BackgroundColor="#0B0F1A"
             Title="Filmovi">

    <StackLayout Padding="15" Spacing="15">

        <Picker x:Name="GenrePicker"
                Title="Filter po zanru"
                TitleColor="#FFC107"
                TextColor="White"
                BackgroundColor="#12182B"
                SelectedIndexChanged="OnGenreChanged"/>

        <CollectionView x:Name="FilmsCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnFilmSelected">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Film">
                    <Frame BackgroundColor="#12182B"
                           CornerRadius="10"
                           Margin="5"
                           Padding="10">

                        <StackLayout>
                            <Image Source="{Binding Poster}"
                                   HeightRequest="200"/>

                            <Label Text="{Binding Title}"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="14"/>

                            <Label Text="{Binding Year}"
                                   TextColor="#FFC107"
                                   FontSize="12"/>
                        </StackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
