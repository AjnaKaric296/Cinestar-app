<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.Filmovi"
             BackgroundColor="{StaticResource PrimaryBlue}">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Sticky Picker -->
        <StackLayout Grid.Row="0" Spacing="10" BackgroundColor="{StaticResource PrimaryBlue}">
            <Picker x:Name="GenrePicker" 
                    Title="Odaberi Å¾anr" 
                    SelectedIndexChanged="OnGenreChanged"/>
        </StackLayout>

        <!-- CollectionView -->
        <CollectionView x:Name="FilmsCollectionView"
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnFilmSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Film">
                    <Frame HasShadow="True" Margin="5" Padding="5">
                        <StackLayout>
                            <Image Source="{Binding Poster}" HeightRequest="200"/>
                            <Label Text="{Binding Title}" FontAttributes="Bold"/>
                            <Label Text="{Binding Year}"/>
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Button Text="{Binding Showtimes[0]}" Clicked="OnShowtimeClicked"/>
                                <Button Text="{Binding Showtimes[1]}" Clicked="OnShowtimeClicked"/>
                                <Button Text="{Binding Showtimes[2]}" Clicked="OnShowtimeClicked"/>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
