<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Cinestar_app.Filmovi"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Cinestar_app"
             x:DataType="local:Filmovi"
             Title="Filmovi">

    <RefreshView x:Name="RefreshView1" IsRefreshing="{Binding IsRefreshing}">
        <CollectionView x:Name="FilmoviList" 
                        ItemsSource="{Binding Movies}"
                        RemainingItemsThreshold="3">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Movie">
                    <SwipeView>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Stroke="#E0E0E0" 
                                    StrokeThickness="1" 
                                    Padding="10">
                                <Grid>
                                    <Image Source="{Binding Poster}"
                                           Aspect="AspectFill"
                                           HeightRequest="120"/>
                                    <Label Text="{Binding Title}"
                                           VerticalOptions="End"
                                           BackgroundColor="Black"
                                           TextColor="White"
                                           FontSize="12"/>
                                </Grid>
                            </Border>

                            <Button Grid.Column="1" 
                                    Text="Detalji"
                                    CommandParameter="{Binding .}"
                                    Clicked="IdiNaFIlmDetalji"
                                    BackgroundColor="#051851"
                                    TextColor="White"
                                    Margin="5,0,0,0"/>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
