<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Cinestar_app.Models"
             x:Class="Cinestar_app.Filmovi"
             Title=" ">

 
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#051851" Offset="0.0"/>
            <GradientStop Color="#051851" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
          Padding="10">

        <Grid Grid.Row="0"
              HeightRequest="60"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="logo.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   Grid.Column="0"
                   VerticalOptions="Center"
                   Margin="15,10,0,0"/>

            <StackLayout Orientation="Horizontal"
                         Grid.Column="2"
                         VerticalOptions="Center"
                         Spacing="10">
                <Label Text="{Binding SelectedCity}"
                       TextColor="white"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Margin="0,10,0,10"
                       FontSize="16">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCityTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Image Source="strelica.png"
                       HeightRequest="10"
                       WidthRequest="10"
                       VerticalOptions="Center"
                       Margin="0,10,15,10"
                       />
            </StackLayout>
        </Grid>

        <BoxView Grid.Row="1"
                 HeightRequest="1"
                 Color="#3e3e57"
                 Margin="0,10,0,0"
                 HorizontalOptions="Fill"
                 Opacity="0.6"/>
        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,0"
              VerticalOptions="Center">

            <Picker x:Name="GenrePicker"
                    Title="Filter po žanru"
                    VerticalOptions="Center"
                    Margin="15,0,0,10"
                    TextColor="White"
                    SelectedIndexChanged="OnGenreChanged"/>

            <Image Grid.Column="1"
                   Source="strelica.png"
                   HeightRequest="10"
                   WidthRequest="10"
                   VerticalOptions="Center"
                   Margin="0,0,15,10"/>
        </Grid>

        <BoxView Grid.Row="3"
                 HeightRequest="1"
                 Color="#3e3e57"
                 HorizontalOptions="Fill"
                 Opacity="0.6"/>

        <CollectionView Grid.Row="4"
                        x:Name="FilmsCollectionView"
                        SelectionMode="None"
                        Margin="0,10,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Film">
                    <Frame BackgroundColor="#051851"
                           CornerRadius="20"
                           Padding="12"
                           Margin="8">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFilmTapped"/>
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="120,*">

                            <Image Source="{Binding Poster}"
                                   HeightRequest="180"
                                   WidthRequest="120"
                                   Aspect="AspectFill"
                                   VerticalOptions="Center"/>

                            <StackLayout Grid.Column="1"
                                         Padding="10"
                                         VerticalOptions="Center"
                                         Spacing="6">

                                <Label Text="{Binding Title}"
                                       TextColor="White"
                                       FontSize="15"
                                       TextTransform="Uppercase"
                                       LineBreakMode="TailTruncation"/>

                                <Label Text="{Binding Genre}"
                                       TextColor="#CCCCCC"
                                       FontSize="11"
                                       LineBreakMode="TailTruncation"/>

                                <Label Text="{Binding Director}"
                                       TextColor="#AAAAAA"
                                       FontSize="10"/>

                                <StackLayout Orientation="Horizontal"
                                             Spacing="5">
                                    <Image Source="clock.webp"
                                           HeightRequest="12"/>
                                    <Label Text="{Binding Runtime}"
                                           TextColor="White"
                                           FontSize="12"/>
                                </StackLayout>

                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid x:Name="LoadingOverlay"
              BackgroundColor="#80000000"
              IsVisible="False"
              Grid.RowSpan="5">

            <StackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="10">
                <ActivityIndicator IsRunning="True"
                                   Color="#FFD200"
                                   WidthRequest="60"
                                   HeightRequest="60"/>
                <Label Text="Učitavanje filmova..."
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold"/>
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
