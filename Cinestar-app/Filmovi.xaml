<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.Filmovi"
             Title="">
    <ScrollView>
        <StackLayout BackgroundColor="#051851" Padding="20">
            <Label Text="Filmovi" 
                   TextColor="White"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="FilmoviCollection" BackgroundColor="Transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="LightGray" Margin="5" Padding="10" HeightRequest="120">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="{Binding Poster}" Aspect="AspectFill"/>
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Margin="10,0,0,0">
                                    <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="Black"/>
                                    <Button Text="Detalji" 
                                            CommandParameter="{Binding .}"
                                            Clicked="IdiNaFIlmDetalji"
                                            BackgroundColor="#051851"
                                            TextColor="White"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
