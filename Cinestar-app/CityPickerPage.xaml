<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.CityPickerPage"
             BackgroundColor="#051851">
    <ScrollView>
        <StackLayout>
            <Image Source="logo.png"
                   Margin="30"
                   HeightRequest="90"
                   HorizontalOptions="Center"
                   />
            <Label Text="ODABERI GRAD:" TextDecorations="Underline" TextColor="White" FontSize="20" Margin="0,0,0,20" HorizontalOptions="Center"/>
            <ListView x:Name="CitiesListView"
          BackgroundColor="Transparent"
          SeparatorVisibility="None"
          RowHeight="70">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <BoxView HeightRequest="1" Color="#363d39" HorizontalOptions="FillAndExpand" />
                            <Label Text="{Binding}" 
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                        HorizontalOptions="Center"
                        TextTransform="Uppercase"
                       Padding="30,20"
                       VerticalOptions="Center" />
                           </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
    
</ContentPage>
