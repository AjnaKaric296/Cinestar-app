<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.CityPickerPage"
             BackgroundColor="#051851"
             Title="Izaberi grad">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Izaberi grad" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>

            <ListView x:Name="CitiesListView" 
                      ItemSelected="OnCitySelected"
                      BackgroundColor="#051851"
                      RowHeight="65"
                      Margin="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#051851" 
                                   HasShadow="False" 
                                   CornerRadius="10" 
                                   Margin="5">
                                <Label Text="{Binding}" 
                                       FontSize="20" 
                                       TextColor="#051851"
                                       Padding="20,15"
                                       VerticalOptions="Center"/>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
