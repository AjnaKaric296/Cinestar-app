<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.CityPickerPage"
             BackgroundColor="#051851"
             Title="Izaberi grad">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="90"
                   HorizontalOptions="Start"
                   Margin="0,20"/>

            <!-- Naslov -->
            <Label Text="ODABERI GRAD:"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"/>

            <!-- Lista gradova -->
            <ListView x:Name="CitiesListView"
                      BackgroundColor="Transparent"
                      SeparatorVisibility="None"
                      RowHeight="60">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <BoxView HeightRequest="1"
                                         Color="#051851"
                                         HorizontalOptions="FillAndExpand"/>
                                <Label Text="{Binding .}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Start"
                                       Padding="0,10"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>

</ContentPage>
