<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.CityPickerPage"
             BackgroundColor="#051851">
    <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- LOGO -->
        <Image Source="logo.png"
        <ListView x:Name="CitiesListView"
                  BackgroundColor="Transparent"
                  SeparatorVisibility="None"
                  RowHeight="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                            <StackLayout>
                                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="FillAndExpand" Margin="0,10"/>
                        <Label Text="{Binding}" 
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"
                               Padding="30,20"
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
</ContentPage>
