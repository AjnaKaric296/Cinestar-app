<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.RegistracijaPage"
             Title="Registracija"
             BackgroundColor="#051851">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="REGISTRACIJA"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="White"/>

            <Entry x:Name="ImeEntry" Placeholder="Ime" TextColor="White"/>
            <Entry x:Name="PrezimeEntry" Placeholder="Prezime" TextColor="White"/>
            <Entry x:Name="EmailEntry" Placeholder="Email"
                   Keyboard="Email" TextColor="White"/>
            <Entry x:Name="LozinkaEntry" Placeholder="Lozinka"
                   IsPassword="True" TextColor="White"/>
            <Entry x:Name="PotvrdaLozinkeEntry" Placeholder="Potvrdi lozinku"
                   IsPassword="True" TextColor="White"/>

            <Button Text="Registruj se"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="RegistrujSe_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
