<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.RegistracijaPage"
             Title=""
             BackgroundColor="#051851">

    <Grid>
        <Image Source="pozadinskaslika.jpg"
               Aspect="AspectFill"/>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="REGISTRACIJA"
                       FontSize="24"
                       HorizontalOptions="Center"
                       Margin="0,30,0,0"
                       TextColor="White"
                       FontFamily="Arial"
                       Padding="10"/>

                <BoxView HeightRequest="1"
                         BackgroundColor="White"
                         HorizontalOptions="FillAndExpand"
                         Margin="5,5"/>

                <Frame Padding="0"
                       BackgroundColor="#051851"
                       CornerRadius="20"
                       HasShadow="False">
                    <Entry x:Name="ImeEntry"
                           Placeholder="Ime"
                           TextColor="White"
                           PlaceholderColor="#AAAAAA"
                           BackgroundColor="Transparent"
                           FontSize="13"
                           HeightRequest="35"
                           VerticalTextAlignment="Center"
                           Margin="12,0"/>
                </Frame>

                <Frame Padding="0"
                       BackgroundColor="#051851"
                       CornerRadius="20"
                       HasShadow="False">
                    <Entry x:Name="PrezimeEntry"
                           Placeholder="Prezime"
                           TextColor="White"
                           PlaceholderColor="#AAAAAA"
                           BackgroundColor="Transparent"
                           FontSize="13"
                           HeightRequest="35"
                           VerticalTextAlignment="Center"
                           Margin="12,0"/>
                </Frame>

                <Frame Padding="0"
                       BackgroundColor="#051851"
                       CornerRadius="20"
                       HasShadow="False">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Email"
                           Keyboard="Email"
                           TextColor="White"
                           PlaceholderColor="#AAAAAA"
                           BackgroundColor="Transparent"
                           FontSize="13"
                           HeightRequest="35"
                           VerticalTextAlignment="Center"
                           Margin="12,0"/>
                </Frame>

                <Frame Padding="0"
                       BackgroundColor="#051851"
                       CornerRadius="20"
                       HasShadow="False">
                    <Entry x:Name="LozinkaEntry"
                           Placeholder="Lozinka"
                           IsPassword="True"
                           TextColor="White"
                           PlaceholderColor="#AAAAAA"
                           BackgroundColor="Transparent"
                           FontSize="13"
                           HeightRequest="35"
                           VerticalTextAlignment="Center"
                           Margin="12,0"/>
                </Frame>

                <Frame Padding="0"
                       BackgroundColor="#051851"
                       CornerRadius="20"
                       HasShadow="False">
                    <Entry x:Name="PotvrdaLozinkeEntry"
                           Placeholder="Potvrdi lozinku"
                           IsPassword="True"
                           TextColor="White"
                           PlaceholderColor="#AAAAAA"
                           BackgroundColor="Transparent"
                           FontSize="13"
                           HeightRequest="35"
                           VerticalTextAlignment="Center"
                           Margin="12,0"/>
                </Frame>

                <Button Text="Registruj se"
                        BackgroundColor="#0a0733"
                        TextColor="White"
                        FontFamily="Arial"
                        CornerRadius="15"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Clicked="RegistrujSe_Clicked"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
