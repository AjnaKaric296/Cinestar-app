<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.Profil"
             Title="Profil"
             BackgroundColor="#051851">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="StatusLabel"
                   Text="PRIJAVA"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Padding="10"/>

            <BoxView HeightRequest="1" 
                     BackgroundColor="#FFD700" 
                     HorizontalOptions="FillAndExpand"
                     Margin="5,5"/>

            <Button x:Name="PrijavaButton"
                    Text="Prijavi se"
                    BackgroundColor="#FFD700"
                    TextColor="White"
                    Clicked="Prijava_Clicked"
                    Margin="10"
                    HeightRequest="55"
                    FontSize="16"
                    FontAttributes="Bold"/>

            <Button x:Name="RegistracijaButton"
                    Text="Registruj se"
                    BackgroundColor="#FFD700"
                    TextColor="White"
                    Clicked="ToggleRegistracija"
                    Margin="10"
                    HeightRequest="55"
                    FontSize="16"
                    FontAttributes="Bold"/>

            <Frame x:Name="RegistracijaForma"
                   IsVisible="False"
                   BackgroundColor="#1A2A4A"
                   Padding="20"
                   CornerRadius="15"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="REGISTRACIJA"
                           FontSize="20"
                           HorizontalOptions="Center"
                           TextColor="White"
                           FontAttributes="Bold"/>

                    <Entry x:Name="ImeEntry" 
                           Placeholder="Ime" 
                           TextColor="White" 
                           BackgroundColor="Transparent"
                           PlaceholderColor="Gray"/>

                    <Entry x:Name="PrezimeEntry" 
                           Placeholder="Prezime" 
                           TextColor="White" 
                           BackgroundColor="Transparent"
                           PlaceholderColor="Gray"/>

                    <Entry x:Name="EmailEntry" 
                           Placeholder="Email" 
                           Keyboard="Email"
                           TextColor="White" 
                           BackgroundColor="Transparent"
                           PlaceholderColor="Gray"/>

                    <Entry x:Name="LozinkaEntry" 
                           Placeholder="Lozinka" 
                           IsPassword="True"
                           TextColor="White" 
                           BackgroundColor="Transparent"
                           PlaceholderColor="Gray"/>

                    <Entry x:Name="PotvrdaLozinkaEntry" 
                           Placeholder="Potvrdi lozinku" 
                           IsPassword="True"
                           TextColor="White" 
                           BackgroundColor="Transparent"
                           PlaceholderColor="Gray"/>

                    <Button x:Name="RegistrujButton"
                            Text="REGISTRUJ SE"
                            BackgroundColor="#28A745"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Clicked="RegistrujSe_Clicked"/>

                    <Button x:Name="NazadButton"
                            Text="NAZAD"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="14"
                            Clicked="ToggleRegistracija"/>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="ProfilInfo" 
                   IsVisible="False"
                   BackgroundColor="#1A2A4A"
                   Padding="20"
                   CornerRadius="15"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="ImeLabel" 
                           Text="Ime: N/A"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"/>

                    <Label x:Name="EmailProfilLabel" 
                           Text="Email: N/A"
                           FontSize="16"
                           TextColor="White"/>

                    <Button Text="ODJAVI SE"
                            BackgroundColor="#DC3545"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Clicked="Logout_Clicked"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
