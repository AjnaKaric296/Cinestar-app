<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinestar_app.Profil"
             Title=""
             BackgroundColor="#051851">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#051851" VerticalOptions="Center">

            <Label Text="PRIJAVA"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontFamily="Arial"
                   Padding="10"/>
            <BoxView HeightRequest="1" 
                     BackgroundColor="#FFD700" 
                    HorizontalOptions="FillAndExpand"
                    Margin="5,5"/>

            <!-- BUTTONI -->
            <Button Text="Prijavi se"
                    BackgroundColor="#FFD700"
                    TextColor="White"
                    Clicked="Prijava_Clicked"
                    FontFamily="Arial"
                    Margin="10"
                    />

            <Button Text="Registruj se"
                    BackgroundColor="#FFD700"
                    TextColor="White"
                    Clicked="Registracija_Clicked"
                    FontFamily="Arial"
                    Margin="5,0"
                    />


            <!-- REGISTRACIJA FORMA (sakrivena na pocetku) -->
            <VerticalStackLayout x:Name="RegistracijaForma"
                                 IsVisible="False"
                                 Spacing="10"
                                 Margin="0,20,0,0">

                <Label Text="Registracija"
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontFamily="Arial"/>

                <Entry Placeholder="Ime" TextColor="White" FontFamily="Arial"/>
                <Entry Placeholder="Prezime" TextColor="White" FontFamily="Arial"/>
                <Entry Placeholder="Email" Keyboard="Email" TextColor="White" FontFamily="Arial"/>
                <Entry Placeholder="Lozinka" IsPassword="True" TextColor="White" FontFamily="Arial"/>
                <Entry Placeholder="Potvrdi lozinku" IsPassword="True" TextColor="White" FontFamily="Arial"/>

                <Button Text="Registruj se"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontFamily="Arial"
                        />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
